@model TodoCSharp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="form-signin">
    <div asp-validation-summary="ModelOnly"></div>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label asp-for="UserName" for="inputEmail" class="sr-only"></label> 
    <input asp-for="UserName" class="form-control" placeholder="UserName" />
    <span asp-validation-for="UserName"></span>

    <label asp-for="Email" class="sr-only"></label>
    <input asp-for="Email" class="form-control" placeholder="Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Password" class="sr-only"></label>
    <input asp-for="Password" class="form-control" placeholder="Password" />
    <span asp-validation-for="Password"></span>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>

