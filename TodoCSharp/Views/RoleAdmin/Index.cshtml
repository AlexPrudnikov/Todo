@model IEnumerable<IdentityRole>
@{

}
<div class="bg-primary panel-body"><h4>Roles</h4></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table-condensed table-bordered table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Users</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No Roles</td>
        </tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-controller="RoleAdmin" asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-controller="RoleAdmin" asp-action="Create" class="btn btn-primary">Create</a>

