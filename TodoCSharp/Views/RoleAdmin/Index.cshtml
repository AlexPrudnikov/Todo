@model IEnumerable<IdentityRole>
@{
    Int32 index = 0;
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Users</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No Roles</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                index = index + 1;
            <tr>
                <th scope="row">@index</th>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-controller="RoleAdmin" asp-action="Delete" asp-route-id="@role.Id" method="post" class="form-signin">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-controller="RoleAdmin" asp-action="Create" class="btn btn-primary">Create</a>
</div>


